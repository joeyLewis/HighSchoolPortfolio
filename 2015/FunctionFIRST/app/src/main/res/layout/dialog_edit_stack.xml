<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/teleStack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ToggleButton
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/toggleTeleStack6"
            android:background="@drawable/tote_toggle_button" />

        <ToggleButton
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/toggleTeleStack5"
            android:background="@drawable/tote_toggle_button" />

        <ToggleButton
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/toggleTeleStack4"
            android:background="@drawable/tote_toggle_button" />

        <ToggleButton
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/toggleTeleStack3"
            android:background="@drawable/tote_toggle_button"/>

        <ToggleButton
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/toggleTeleStack2"
            android:background="@drawable/tote_toggle_button" />

        <ToggleButton
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/toggleTeleStack1"
            android:background="@drawable/tote_toggle_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_teleStack"
            android:id="@+id/textTeleStack"
            android:textColor="@color/Gold" />

    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cb_stackKnockedOver"
        android:id="@+id/cb_stackKnockedOver"
        android:textColor="@color/Gold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:checked="false" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/teleStackContainerLitter"
        android:layout_above="@+id/cb_stackKnockedOver"
        android:layout_toRightOf="@+id/teleStack"
        android:layout_toEndOf="@+id/teleStack"
        android:layout_toLeftOf="@+id/pickerContainerHeight"
        android:layout_toStartOf="@+id/pickerContainerHeight">

        <ToggleButton
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/toggleLitter"
            android:background="@drawable/litter_toggle_button"/>

        <ToggleButton
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:id="@+id/toggleContainer"
            android:background="@drawable/container_toggle_button"
            android:checked="false" />

    </LinearLayout>

    <com.vandenrobotics.functionfirst.views.NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pickerContainerHeight"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
