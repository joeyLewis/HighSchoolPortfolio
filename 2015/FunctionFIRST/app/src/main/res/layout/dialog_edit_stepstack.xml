<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cb_stackKnockedOver"
        android:id="@+id/cb_coopStackKnockedOver"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Gold" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/coopStack"
        android:layout_above="@+id/cb_coopStackKnockedOver"
        android:layout_centerHorizontal="true">

        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/toggleCoopStack6"
            android:background="@drawable/yellow_tote_toggle_button" />

        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/toggleCoopStack5"
            android:background="@drawable/yellow_tote_toggle_button" />

        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/toggleCoopStack4"
            android:background="@drawable/yellow_tote_toggle_button" />

        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/toggleCoopStack3"
            android:background="@drawable/yellow_tote_toggle_button"/>

        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/toggleCoopStack2"
            android:background="@drawable/yellow_tote_toggle_button" />

        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/toggleCoopStack1"
            android:background="@drawable/yellow_tote_toggle_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_coopStack"
            android:id="@+id/textCoopStack"
            android:textColor="@color/Gold" />

    </LinearLayout>
</RelativeLayout>
